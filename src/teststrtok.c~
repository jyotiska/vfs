#include <stdio.h>
#include <string.h>

char** string_split (char *str)
{
  char new[10][20];
  char * pch;
  
  int i=0;
  printf ("Splitting string \"%s\" into tokens:\n",str);
  pch = strtok (str,"/");
  while (pch != NULL)
  {
    
    strcpy(new[i],pch);
    printf ("%s\n",new[i]);
	i++;
    pch = strtok (NULL, "/");
	
  }
  return new;
}

int main()
{
	int i=0;
	char *name = string_split("root/dir1/dir2/dir3");
	while(name[i])
	{
		printf("%s\n",*name[i]);
	}
	return 0;
}
